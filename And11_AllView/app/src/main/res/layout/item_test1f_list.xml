<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_test1f"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_background"
        android:layout_margin="8dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_test1f_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품제목"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_test1f_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="송파2동 · 1시간전"
            android:textColor="#9C9A9A"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_test1f_title"/>

        <TextView
            android:id="@+id/tv_test1f_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50,000원"
            android:textColor="#FF9100"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_test1f_info"/>
        
        <LinearLayout
            android:layout_width=""
            android:layout_height=""
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_message_24"/>
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/like"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentEnd="true"
            android:layout_toLeftOf="@+id/tv_test1f_like"
            android:layout_alignParentBottom="true"/>
        
        
        <TextView
            android:id="@+id/tv_test1f_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>





</LinearLayout>